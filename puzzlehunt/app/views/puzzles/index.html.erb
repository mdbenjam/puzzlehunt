<div class="puzzle-container">
  <div class="puzzle-content">
    <h1>Puzzles</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Answer</th>
        </tr>
      </thead>

      <tbody>
        <% @puzzles.each do |puzzle| %>
          <tr>
            <td><%= link_to puzzle.title, puzzle_path(puzzle), method: "show" %></td>
            <td><%= puzzle.solved?(current_user) ? puzzle.correct_answer(current_user) : "---" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>